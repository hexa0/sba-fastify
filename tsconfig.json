{
	"include": ["src/**/*"],
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext"],
		"moduleDetection": "force",

		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"resolveJsonModule": true,

		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,

		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true
	}
}
